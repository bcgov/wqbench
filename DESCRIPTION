Package: wqbench
Title: Calculate Aquatic Life Benchmarks
Version: 1.0.0
Authors@R: c(
  person("Province of British Columbia", role = "cph"),
  person("Ayla", "Pearson", , "ayla@poissonconsulting.ca", role = c("aut"),
             comment = c(ORCID = "0000-0001-7388-1222")),
  person("Angeline", "Tillmanns", ,"Angeline.Tillmanns@gov.bc.ca", role = c("aut", "cre")),
